<?xml version="1.0" encoding="UTF-8"?>
<templates id="new_pos_invoice_appexbo" inherit_id="point_of_sale.template" xml:space="preserve">
     <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <div style="font-size:14px;width:75%;margin: auto;text-align:center;">
                    <div> <strong>Bits &amp; Cream</strong></div>
                </div>
                <div style="font-size:10px;width:50%;margin: 2px auto;text-align:center;">
                    <strong><t t-esc="props.data.name"/></strong>
                </div>
                <div class="pos-receipt-contact">
                    <div style="font-size:10px;width:70%;margin: 2px auto;text-align:center;">
                        <strong>Fecha:</strong> <t t-esc="props.data.date"/>
                    </div>
                </div>
                <!-- LÃ­neas de Pedido -->
                <table style="width:100%;text-align:left;" class="orderlines">
                    <tr style="border: 1px solid #04aa6b;">
                        <th style="border: 1px dotted #04aa6b;font-size:10px;">Producto</th>
                        <th style="border: 1px solid #04aa6b;font-size:10px;">Subt</th>
                        <th style="border: 1px solid #04aa6b;font-size:10px;">P/U</th>
                        <th style="border: 1px solid #04aa6b;font-size:10px;">Ctd</th>
                    </tr>
                    <t t-foreach="props.data.orderlines" t-as="line" t-key="line.id">
                        <tr style="border: 1px solid #04aa6b;">
                            
                            <td style="font-size: 8px; border: 1px solid #04aa6b;">
                                <strong><t t-esc="line.productName" /></strong>
                                <t t-if="line.is_pack">
                                    <t t-if="line.combo_products">
                                        <t t-foreach="line.combo_products" t-as="products" t-key="products.id">
                                            <t t-if="products">
                                                <div class="product-name" style="font-size: 8px; font-weight: 500;">
                                                   <strong>-</strong><t t-esc="products.display_name" /> [<t t-esc="products.combo_qty"/>]
                                                </div>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                            </td>
                            <td style="font-size: 8px; border: 1px solid #04aa6b;">
                                <t t-esc="line.price" />
                            </td>
                            <td style="font-size: 8px; border: 1px solid;">
                                <s t-esc="line.oldUnitPrice" t-if="line.oldUnitPrice" />
                                <t t-esc="line.unitPrice"/>
                            </td>
                            <td style="font-size: 8px; border: 1px solid #04aa6b;"><t t-esc="line.qty" /> </td>
                        </tr>
                    </t>
                </table>
                <br/>
                <table style="width:60%;text-align:left !important;margin-bottom:4px;" class="orderlines">
                    <tr style="">
                        <td style="">Total: <t t-esc="props.formatCurrency(props.data.amount_total)"/></td>
                    </tr>
                    <tr style="">
                        <td style="">A Pagar: <t t-esc='props.formatCurrency(props.data.amount_total + props.data.rounding_applied)'/></td>
                    </tr>
                    <t t-if="props.data.total_discount">
                        <tr style="">
                            <td style="">Descuentos: <t t-esc="props.format_currency(props.data.total_discount)"/></td>
                        </tr>
                    </t>
                </table>
                <div class="before-footer"/>
                <div t-if="props.data.footer" class="pos-receipt-center-align">
                    <t t-out="props.data.footer"/>
                </div>
                <div style="text-align: center;">--------------------------------</div>
                <div class="pos-receipt-order-data">
                    <t t-if="props.data.cashier">
                        <div class="cashier">
                            <div>Atendido por <t t-esc="props.data.cashier"/></div>
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </t>
</templates>
